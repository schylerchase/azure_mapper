{
  "name": "azure-network-mapper",
  "version": "1.0.0",
  "description": "Azure Network Topology Mapper - Desktop Application",
  "author": "schylerchase",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.schylerchase.azure-network-mapper",
    "productName": "Azure Network Mapper",
    "files": [
      "index.html",
      "main.js",
      "main-utils.js",
      "preload.js",
      "export-azure-data.sh"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "schylerchase",
      "repo": "Azure-Mapper"
    }
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0"
  }
}
